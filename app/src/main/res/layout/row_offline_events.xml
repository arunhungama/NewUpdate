<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/clMain"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvBgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="@drawable/bg_paytm_cardview"
            android:paddingStart="@dimen/dimen_18"
            android:paddingTop="@dimen/dimen_13"
            android:paddingBottom="@dimen/dimen_13"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivEvent"
                android:layout_width="@dimen/dimen_82"
                android:layout_height="@dimen/dimen_127"
                android:background="@drawable/bg_gradient_placeholder"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.RoundCornerBucket" />

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_45"
                android:alpha="0.9"
                android:ellipsize="end"
                android:fontFamily="@font/sf_pro_text_medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:minLines="2"
                android:text="One Night Only Tour by Arijit Singh"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_text"
                android:includeFontPadding="false"
                android:text="Thu | 19 Oct, 9:30 PM"
                android:textColor="@color/item_sub_title_color"
                android:textSize="@dimen/font_13"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                app:layout_constraintTop_toBottomOf="@+id/tvEventTitle" />


            <ImageView
                android:id="@+id/dot_line1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layerType="hardware"
                android:src="@drawable/horintal_dotted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEventTime"
                app:layout_constraintTop_toBottomOf="@+id/tvEventTime" />

            <TextView
                android:id="@+id/ticketStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_pro_text"
                android:text="PAID"
                android:textColor="#999999"
                android:textSize="@dimen/font_11"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                app:layout_constraintTop_toBottomOf="@+id/dot_line1" />


            <TextView
                android:id="@+id/tvAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/sf_pro_text"
                android:text="Rs. 1299"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_14"
                app:layout_constraintEnd_toEndOf="@+id/dot_line1"
                app:layout_constraintTop_toBottomOf="@+id/dot_line1" />

            <ImageView
                android:id="@+id/dot_line2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layerType="hardware"
                android:src="@drawable/horintal_dotted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEventTime"
                app:layout_constraintTop_toBottomOf="@+id/tvAmountPaid" />


            <TextView
                android:id="@+id/tvViewTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_view_ticket"
                android:fontFamily="@font/sf_pro_text"
                android:text=" View Ticket"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_12"
                app:layout_constraintEnd_toEndOf="@+id/dot_line2"
                app:layout_constraintTop_toBottomOf="@+id/dot_line2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvBgViewForeground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_128sdp"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="#65332D2D"
            android:foreground="#46939191"
            android:foregroundTint="#5C302E2E"
            android:paddingStart="@dimen/dimen_18"
            android:paddingTop="@dimen/dimen_13"
            android:paddingBottom="@dimen/dimen_13"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_32"
        android:background="@drawable/ic_bg_live"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_9"
        android:layout_marginEnd="@dimen/_6sdp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@id/view1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09"
            android:layout_gravity="center"
            android:id="@+id/tvDay"
            android:textSize="@dimen/font_9"
            android:lineSpacingExtra="@dimen/dimen_0"
            android:lineHeight="@dimen/font_9"
            android:textColor="@color/colorWhite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR"
            android:layout_gravity="center"
            android:id="@+id/tvMonth"
            android:lineSpacingExtra="@dimen/dimen_0"
            android:lineHeight="@dimen/font_9"
            android:textSize="@dimen/font_9"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>