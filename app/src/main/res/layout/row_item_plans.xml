            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/white_border_transparent_bg"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp">
                <com.hungama.music.utils.customview.blurview.CustomBlurView
                    android:id="@+id/realtimeBlurView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:realtimeBlurRadius="150dp"
                    android:visibility="gone"
                    app:realtimeOverlayColor="#54E29113" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#6B5026"
                        android:textSize="@dimen/font_9"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textStyle="normal"
                        android:text="@string/with_ticket_of" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#6B5026"
                        android:textSize="@dimen/font_11"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textStyle="normal"
                        tools:text="â‚¹6999" />

                    <TextView
                        android:id="@+id/tvPlanTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textColor="#32240D"
                        android:textSize="@dimen/font_14"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        tools:text="1 Year" />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#6B5026"
                        android:textSize="@dimen/font_12"
                        android:textStyle="normal"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="Membership" />


                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
